<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,DuplicateIds,TextFields,SpUsage" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="912dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Pengisian data pasien"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nHarap mengisi data dengan benar!"
                android:textSize="10dp"
                android:textStyle="italic"
                android:typeface="monospace"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nNama Lengkap"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:typeface="monospace" />
            <requestFocus />

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="umur"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editumur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="20dp"
                android:typeface="monospace" >
            </EditText>

            <TextView
                android:id="@+id/textAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/textIG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="penyakit pasien"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editpenyakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:typeface="monospace" />


            <TextView
                android:id="@+id/textNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor HP"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnPindah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="simpan" />

        </LinearLayout>
    </ScrollView>